<% if @patient.errors.any? %>
    <% @patient.errors.full_messages.each do |fm|%>
        <p> <%= fm %> </p>
    <% end%>
<% end %>

<%= form_for @patient do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <%= f.label :age %>
    <%= f.number_field :age%>
    <%= f.label :doctor %>
    <%= f.collection_select :doctor_id, Doctor.all, :id, :name%>
    <%= f.submit%>
<% end %>